<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#333333">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MP3 Player"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:id="@+id/tvHeader"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Playlist Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:id="@+id/tvPlaylist"
        android:layout_marginTop="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons_layout">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:backgroundTint="#B56D06"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:id="@+id/btnPlaylist1"
            android:text="Playlist 1"
            android:layout_marginTop="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:backgroundTint="#B56D06"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:id="@+id/btnPlaylist2"
            android:text="Playlist 2"
            android:layout_marginTop="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:backgroundTint="#B56D06"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:id="@+id/btnPlaylist3"
            android:text="Playlist 3"
            android:layout_marginTop="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:backgroundTint="#B56D06"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:id="@+id/btnPlaylist4"
            android:text="Playlist 4"
            android:layout_marginTop="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:backgroundTint="#B56D06"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:id="@+id/btnPlaylist5"
            android:text="Playlist 5"
            android:layout_marginTop="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:backgroundTint="#B56D06"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:id="@+id/btnPlaylist6"
            android:text="Playlist 6"
            android:layout_marginTop="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:backgroundTint="#B56D06"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:id="@+id/btnPlaylist7"
            android:text="Playlist 7"
            android:layout_marginTop="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:backgroundTint="#B56D06"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:id="@+id/btnPlaylist8"
            android:text="Playlist 8"
            android:layout_marginTop="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:backgroundTint="#B56D06"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:id="@+id/btnPlaylist9"
            android:text="Playlist 9"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:backgroundTint="#880000"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:id="@+id/btnExit"
            android:text="Exit"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>


</RelativeLayout>